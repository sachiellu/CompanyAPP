@page
@model CompanyAPP.Areas.Identity.Pages.Account.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "請檢查您的信箱";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h4 class="mb-0">發送成功</h4>
                </div>
                <div class="card-body p-5 text-center">
                    <h2 class="mb-3">請查看您的信箱</h2>
                    <p class="lead text-muted">
                        請檢查您的信箱以重設密碼。<br />
                        (如果沒看到，請檢查垃圾郵件夾)
                    </p>
                    <div class="mt-4">
                        <a asp-page="./Login" class="btn btn-outline-secondary">返回登入頁面</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>