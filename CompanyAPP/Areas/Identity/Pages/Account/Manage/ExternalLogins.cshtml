@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = "綁定外部帳號";
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="alert alert-light border">
    <h5 class="fw-bold">已綁定的服務</h5>
    @if (Model.CurrentLogins?.Count > 0)
    {
    }
    else
    {
        <p class="text-muted">目前尚未綁定任何外部帳號。</p>
    }
</div>

@if (Model.OtherLogins?.Count > 0)
{
    <h5 class="mt-4 fw-bold">可綁定的其他服務</h5>
    <hr />
    <form id="link-login-form" asp-page-handler="LinkLogin" method="post" class="form-horizontal">
        <div id="socialLoginList">
            <p>
                @foreach (var provider in Model.OtherLogins)
                {
                    <button id="@provider.Name" type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name" title="使用 @provider.DisplayName 登入">
                        綁定 @provider.DisplayName
                    </button>
                }
            </p>
        </div>
    </form>
}