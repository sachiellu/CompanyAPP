@model CompanyAPP.Models.Company

@{
    ViewData["Title"] = "刪除確認";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">⚠️ 刪除確認</h4>
                </div>

                <div class="card-body text-center">
                    <h3 class="text-danger mb-4">你確定要刪除此廠商嗎？</h3>

                    <div class="alert alert-light border">
                        <h4 class="fw-bold">@Html.DisplayFor(model => model.Name)</h4>
                        <p class="text-muted mb-0">統一編號: @Html.DisplayFor(model => model.TaxId)</p>
                    </div>

                    <p class="text-muted small">此動作無法復原，相關的員工資料可能會受到影響。</p>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2 d-md-flex justify-content-center mt-4">

                            <a asp-action="Index" class="btn btn-secondary px-4">取消</a>

                            <input type="submit" value="確認刪除" class="btn btn-danger px-4" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>