@model IEnumerable<CompanyAPP.Models.Company>

@{
    ViewData["Title"] = "廠商列表";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>廠商資料管理</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            + 新增廠商
        </a>
    </div>

     @* 搜尋表單 *@
<form asp-controller="Companies" asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="請輸入廠商名稱..." value="@ViewData["CurrentFilter"]">
        <button class="btn btn-outline-secondary" type="submit">🔍 搜尋</button>
        <a asp-action="Index" class="btn btn-outline-dark">清除</a>
    </div>
</form>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Logo</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.TaxId)</th>
                        <th>@Html.DisplayNameFor(model => model.Industry)</th>
                        <th>@Html.DisplayNameFor(model => model.FoundedDate)</th>
                        <th class="text-center">操作功能</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(item.LogoPath))
                                {
                                    <img src="~/images/@item.LogoPath" width="50" height="50" style="border-radius:50%; object-fit:cover;" />
                                }
                                else
                                {
                                    <span>(無)</span>
                                }
                            </td>

                            <td class="fw-bold text-primary">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.TaxId)</td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    @Html.DisplayFor(modelItem => item.Industry)
                                </span>
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.FoundedDate)</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">編輯</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">詳情</a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">刪除</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>