@model IEnumerable<CompanyAPP.Models.Company>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "廠商列表";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
        <h1>廠商資料管理</h1>
        <div class="d-flex flex-wrap">
            @if (isAdmin)
            {
            <a asp-action="Create" class="btn btn-primary me-2">
                + 新增廠商
            </a>
            }
        </div>
    </div>

     @* 搜尋表單 *@
<form asp-controller="Companies" asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="請輸入廠商名稱..." value="@ViewData["CurrentFilter"]">
        <button class="btn btn-outline-secondary" type="submit">🔍 搜尋</button>
        <a asp-action="Index" class="btn btn-outline-dark">清除</a>
    </div>
</form>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 50px;">Logo</th>
                            <th class="fw-bold text-primary text-nowrap">@Html.DisplayNameFor(model => model.Name)</th>
                            <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.TaxId)</th>
                            <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.Industry)</th>
                            <th class="d-none d-md-table-cell">@Html.DisplayNameFor(model => model.FoundedDate)</th>
                            <th class="text-center">操作功能</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.LogoPath))
                                    {
                                        @if (item.LogoPath.StartsWith("http"))
                                        {
                                            <img src="@item.LogoPath" style="width:50px; height:50px; object-fit:cover; border-radius:50%;" />
                                        }
                                        else
                                        {
                                            <img src="~/images/@item.LogoPath" style="width:50px; height:50px; object-fit:cover; border-radius:50%;" />
                                        }
                                    }
                                    else
                                    {
                                        <span>(無)</span>
                                    }
                                </td>

                                <td class="fw-bold text-primary">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.TaxId)</td>
                                <td class="d-none d-md-table-cell">
                                    <span class="badge bg-info text-dark">
                                        @Html.DisplayFor(modelItem => item.Industry)
                                    </span>
                                </td>
                                <td class="d-none d-md-table-cell">@Html.DisplayFor(modelItem => item.FoundedDate)</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        @if (isAdmin)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">編輯</a>
                                        }
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">詳情</a>
                                        @if (isAdmin)
                                        {
                                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmDelete(@item.Id)">
                                                <i class="bi bi-trash"></i> 刪除
                                            </button>

                                            <form id="delete-form-@item.Id" action="/Companies/Delete/@item.Id" method="post" style="display:none;">
                                                @Html.AntiForgeryToken()
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>