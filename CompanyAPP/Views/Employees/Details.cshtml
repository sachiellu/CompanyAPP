@model CompanyAPP.Models.Employee
@inject CompanyAPP.Data.CompanyAppContext _context

@{
    ViewData["Title"] = "Details";
     // 撈取該員工負責的任務
    var missions = _context.Set<CompanyAPP.Models.Mission>()
                   .Where(m => m.EmployeeId == Model.Id)
                   .OrderByDescending(m => m.CreateDate)
                   .ToList();
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">員工詳細資料</h4>
                </div>
                <div class="card-body">

                    <div class="d-flex align-items-center mb-4 border-bottom pb-3">
                        <div class="bg-light rounded-circle d-flex justify-content-center align-items-center text-primary fw-bold" style="width: 64px; height: 64px; font-size: 24px;">
                            @Model.Name.Substring(0, 1)
                        </div>
                        <div class="ms-3">
                            <h2 class="mb-0 text-primary">@Model.Name</h2>
                            <span class="badge bg-secondary">@Html.DisplayFor(model => model.Position)</span>
                            <span class="badge bg-success">@Html.DisplayFor(model => model.Company.Name)</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">電子信箱</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.Email)</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3 fw-bold">所屬廠商</div>
                        <div class="col-sm-9">@Html.DisplayFor(model => model.Company.Name)</div>
                    </div>

                    @* 任務列表區塊  *@
                    <div class="mt-4">
                        <h5 class="text-primary fw-bold border-bottom pb-2"> 責任務列表</h5>
                        @if (missions.Any())
                        {
                            <table class="table table-sm table-hover mt-2">
                                <thead class="table-light">
                                    <tr>
                                        <th>任務標題</th>
                                        <th>狀態</th>
                                        <th>截止日</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var m in missions)
                                    {
                                        <tr>
                                            <td>@m.Title</td>
                                            <td>@m.Status</td>
                                            <td>@m.Deadline.ToShortDateString()</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-light text-center border">
                                <small class="text-muted">此員工目前沒有指派任務</small>
                            </div>
                        }
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary me-2">返回列表</a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-4">編輯資料</a>
                        <a asp-controller="Missions" asp-action="Create" asp-route-employeeId="@Model.Id" class="btn btn-success me-2">
                            + 指派任務
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>