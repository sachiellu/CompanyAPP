@{
    ViewData["Title"] = "系統首頁";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold text-primary">企業資源管理中心</h1>
    <p class="lead text-muted">整合客戶資料、人力資源與權限管理平台</p>
    <hr />
</div>

<div class="container">
    <h2 class="text-center my-4">企業人力分布圖</h2>
    <div style="width: 80%; margin: auto;">
        <canvas id="myChart"></canvas>
    </div>
</div>

@section Scripts {
    <!-- 引入 Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var companyNames = @Html.Raw(Json.Serialize(ViewBag.CompanyNames));
            var employeeCounts = @Html.Raw(Json.Serialize(ViewBag.EmployeeCounts));

            console.log("廠商名單:", companyNames);
            console.log("員工數量:", employeeCounts);

            var ctx = document.getElementById('myChart');
            if (ctx) {
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: companyNames,
                        datasets: [{
                            label: '員工人數',
                            data: employeeCounts,
                            backgroundColor: 'rgba(54, 162, 235, 0.6)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: { stepSize: 1 } // 強制整數刻度
                            }
                        }
                    }
                });
            } else {
                console.error("找不到 ID 為 'myChart' 的資訊");
            }
        });
    </script>
}